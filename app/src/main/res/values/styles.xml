<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="toolbarNavigationButtonStyle">@style/AppTheme.Toolbar.NavigationIcon</item>
    </style>

    <style name="AppTheme.Toolbar.NavigationIcon" parent="Widget.AppCompat.Toolbar.Button.Navigation">
        <item name="tint">@color/colorControlNormal</item>
    </style>

</resources>
